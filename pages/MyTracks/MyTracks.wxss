.mytracks-wrapper{
  width: 100%;
  padding: 18rpx;
  box-sizing: border-box;
}

.mytracks-item{
  width: 100%;
  height: 274rpx;
  background-color: #fff;
  border-radius: 4rpx;
  margin-bottom: 12rpx;
  padding: 18rpx;
  box-sizing: border-box;
}

.mytracks-item-img{
  width: 240rpx;
  height: 240rpx;
  border-radius: 5rpx;
}

.mytracks-item-img image{
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.mytracks-item-word{
  width: calc(100% - 240rpx);
  padding-left: 18rpx;
  box-sizing: border-box;
  position: relative;
}

.mytracks-item-word-top{
  color: #000;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 17rpx;
}

.mytracks-item-word-bottom{
  width: 100%;
  position: absolute;
  bottom: 0;
  padding-right: 18rpx;
  box-sizing: border-box;
}

.mytracks-item-word-price{
  color: #fe6601;
  font-size: 34rpx;
}

.mytracks-item-word-btn{
  width: 155rpx;
  height: 48rpx;
  background: linear-gradient(to right, #fe9701, #fe7501);
  border-radius: 24rpx;
  text-align: center;
  line-height: 48rpx;
  color: #fff;
  font-size: 24rpx;
}

.mytracks-item-time{
  color: #666;
  font-size: 26rpx;
  line-height: 80rpx;
}