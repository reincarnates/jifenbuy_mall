.payment-wrapper{
  width: 100%;
  background-color: #fff;
}

.payment-head{
  width: 100%;
  height: 426rpx;
  flex-direction: column;
}

.payment-head image{
  width: 97rpx;
  height: 97rpx;
}

.payment-head-word{
  margin-top: 60rpx;
  color: #333;
  font-size: 34rpx;
}

.payment-price-wrapper{
  width: 100%;
  height: 168rpx;
  background-color: #f5f5f5;
  padding: 39rpx 30rpx;
  box-sizing: border-box;
}

.payment-price-item{
  width: 100%;
}

.payment-price-item-left{
  color: #666;
  font-size: 24rpx;
}

.payment-price-item-right{
  color: #333;
  font-size: 26rpx;
}

.payment-price-btn{
  width: 267rpx;
  height: 65rpx;
  border-radius: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 65rpx;
  background-color: #fe6601;
  font-size: 28rpx;
  margin: 204rpx auto 0;
}