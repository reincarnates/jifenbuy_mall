.recharge-wrapper{
  width: 100%;
  background-color: #fff;
}

.recharge-head{
  width: 100%;
  height: 62rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.recharge-head-ver{
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
}

.recharge-head-ver image{
  width: 100%;
  height: 100%;
}

.recharge-title{
  width: 100%;
  height: 62rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 62rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.recharge-price-wrapper{
  width: 100%;
  height: 57rpx;
  border-bottom: 1px solid #ddd;
  margin-top: 33rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.recharge-price-word{
  width: 41rpx;
  color: #222;
  font-size: 28rpx;
  text-align: right;
  line-height: 65rpx;
}

.recharge-price-input{
  width: calc(100% - 41rpx);
  height: 100%;
  margin-left: 15rpx;
}

.recharge-price-input input{
  width: 100%;
  height: 100%;
  font-size: 34rpx;
  color: #222;
}

.recharge-price-type{
  width: 100%;
  height: 98rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
  margin-top: 25rpx;
}

.recharge-price-type-img{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.recharge-price-type-img image{
  width: 100%;
  height: 100%;
}

.recharge-price-type-name{
  width: 586rpx;
  color: #333;
  font-size: 28rpx;
}

/* 未选中的 背景样式 */
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 36rpx;
   height: 36rpx;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #fe6601 !important;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 34rpx;
   text-align: center;
   font-size: 26rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.recharge-price-btn{
  width: 474rpx;
  height: 75rpx;
  border-radius: 36rpx;
  background-color: #fe6601;
  color: #fff;
  font-size: 28rpx;
  line-height: 75rpx;
  text-align: center;
  margin: 96rpx auto 0;
}