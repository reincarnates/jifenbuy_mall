.deal-detail-wrapper{
  width: 100%;
  background-color: #fff;
}

.deal-detail-head{
  width: 100%;
  height: 280rpx;
  flex-direction: column;
}

.deal-detail-head-top{
  width: 100%;
  height: 60rpx;
}

.deal-detail-head-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background-color: #000;
}

.deal-detail-head-img image{
  width: 100%;
  height: 100%;
}

.deal-detail-head-word{
  width: 205rpx;
  color: #333;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-all;
}

.deal-detail-head-price{
  width: 100%;
  color: #333;
  font-size: 34rpx;
  text-align: center;
  margin-top: 40rpx;
}

.deal-detail-info{
  width: 100%;
}

.deal-detail-info-item{
  width: 100%;
  height: 92rpx;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.deal-detail-info-item-name{
  color: #333;
}

.deal-detail-info-item-type{
  width: 307rpx;
  color: #666;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-all;
  text-align: right;
}

.deal-detail-info-item-type2{
  width: 307rpx;
  color: #666;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-align: right;
}

.phone-service{
  width: 100%;
  height: 110rpx;
  border-top: 1px solid #ddd;
  color: #333;
  font-size: 24rpx;
  position: fixed;
  bottom: 0;
}

.phone-service image{
  width: 37rpx;
  height: 31rpx;
}