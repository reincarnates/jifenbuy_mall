.balance-wrapper{
  width: 100%;
  background-color: #fff;
  padding-top: 143rpx;
  box-sizing: border-box;
}

.balance-icon{
  width: 100%;
  flex-direction: column;
  color: #333;
  font-size: 28rpx;
}

.balance-icon image{
  width: 82rpx;
  height: 82rpx;
  /* margin-bottom: 10rpx; */
}

.balance-price{
  color: #222;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 25rpx;
}

.balance-payment{
  width: 300rpx;
  height: 72rpx;
  background-color: #fe6601;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 72rpx;
  margin-top: 165rpx;
  border-radius: 5rpx;
}

.balance-bill{
  width: 300rpx;
  height: 72rpx;
  background-color: #f5f5f5;
  color: #fe6601;
  font-size: 30rpx;
  text-align: center;
  line-height: 72rpx;
  margin-top: 35rpx;
  border-radius: 5rpx;
}