.login-wrapper{
  width: 100%;
  height: 100%;
}

.login-head{
  width: 100%;
  height: 462rpx;
  background-color: #f5f5f5;
  padding: 121rpx 67rpx 0;
  box-sizing: border-box;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  position: relative;
}

.login-content{
  width: 100%;
  height: calc(100% - 462rpx);
  background-color: #f5f5f5;
  position: relative;
}

.login-posi{
  width: 666rpx;
  height: 1017rpx;
  background-color: #fff;
  border-radius: 18rpx;
  position: absolute;
  top: -187rpx;
  left: 42rpx;
  padding: 71rpx 42rpx 0;
  box-sizing: border-box;
}

.login-phone-wrapper,
.login-rule-code-wrapper{
  width: 100%;
  height: 100rpx;
  background-color: #fff0e4;
  border-radius: 10rpx;
  margin-bottom: 36rpx;
}

.login-phone-img,
.login-rule-code-img{
  width: 84rpx;
  height: 100rpx;
}

.login-phone-img image{
  width: 30rpx;
  height: 42rpx;
}

.login-phone-input{
  width: calc(100% - 84rpx);
  height: 100rpx;
  color: #999;
  font-size: 26rpx;
}

.login-rule-code-wrapper{
  margin-bottom: 0;
}

.login-rule-code-img image{
  width: 39rpx;
  height: 37rpx;
}

.login-rule-code-input{
  width: calc(100% - 249rpx);
  height: 100rpx;
  color: #999;
  font-size: 26rpx;
}

.login-get-rule-code-wrapper{
  width: 165rpx;
  height: 100rpx;
}

.login-get-rule-code{
  width: 100%;
  height: 48rpx;
  border-left: 1rpx solid #fe6601;
  color: #fe6601;
  font-size: 26rpx;
  text-align: center;
  line-height: 48rpx;
}

.login-btn{
  width: 546rpx;
  height: 90rpx;
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 0 auto;
  margin-top: 84rpx;
  background: linear-gradient(to right, #fe9901 , #fe6801);
  display: block;
}

.wx-login-tips-wrapper{
  width: 466rpx;
  height: 21rpx;
  margin: 0 auto;
  margin-top: 284rpx;
}

.wx-login-tips-line{
  width: 110rpx;
  height: 2rpx;
  background-color: #333;
}

.wx-login-tips-word{
  color: #333;
  font-size: 22rpx;
  margin: 0 25rpx;
}

.wx-login-wrapper{
  width: 100%;
  margin-top: 64rpx;
}

.wx-login{
  border: none !important;
  background: none;
}

.wx-login::after{
  border: none !important;
}

.wx-login image{
  width: 55rpx;
  height: 55rpx;
}

.wx-login-btn{
  color: #333;
  font-size: 24rpx;
}

.login-return{
  position: absolute;
  left: 27rpx;
  width: 18rpx;
  height: 33rpx;
}

.login-return image{
  width: 18rpx;
  height: 33rpx;
}