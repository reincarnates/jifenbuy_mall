.home-wrapper{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 12px;
  box-sizing: border-box;
}

.home-left{
  width: 95rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.home-left image{
  width: 40rpx;
  height: 40rpx;
}

.home-left-word{
  color: #fe9901;
  font-size: 20rpx;
  margin-top: 5rpx;
}

.home-center{
  width: 480rpx;
  height: 60rpx;
  border-radius: 35rpx;
  border: 2px solid #fe9901;
  margin-left: 28rpx;
  position: relative;
}

.home-center input{
  width: 80%;
  height: 56rpx;
  border-radius: 35rpx;
  padding-left: 15rpx;
  font-size: 20rpx;
}

.home-center image{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 24rpx;
  top: 12rpx;
}

.home-right{
  width: 81rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 42rpx;
}

.home-right image{
  width: 45rpx;
  height: 42rpx;
}

.home-right-word{
  font-size: 20rpx;
  color: #fe9901;
  margin-top: 5px;
}