.cashier-wrapper{
  width: 100%;
}

.cashier-pirce{
  width: 100%;
  height: 91rpx;
  border-bottom: 4rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.cashier-pirce-right{
  color: #222;
  font-size: 26rpx;
}

.cashier-payment{
  width: 100%;
}

.cashier-payment-item{
  width: 100%;
  height: 105rpx;
  border-bottom: 1px solid #f5f5f5;
  background-color: #fff;
  padding: 0 35rpx;
  box-sizing: border-box;
}

.cashier-payment-name{
  color: #333;
  font-size: 28rpx;
}

.cashier-payment-name image{
  width: 33rpx;
  height: 36rpx;
}

/* 未选中的 背景样式 */
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 36rpx;
   height: 36rpx;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #fe6601 !important;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 34rpx;
   text-align: center;
   font-size: 26rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.cashier-payment-btn{
  width: 100%;
  height: 90rpx;
  background-color: #fe6601;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
}

.cashier-mask-bg{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .3);
  z-index: 998;
}

.cashier-mask{
  width: 500rpx;
  height: 328rpx;
  background-color: #fff;
  border-radius: 22rpx;
  position: fixed;
  top: 336rpx;
  left: 50%;
  margin-left: -250rpx;
  z-index: 999;
  transition: 1s;
}

.cashier-mask-head{
  width: 100%;
  height: 81rpx;
  border-bottom: 2px solid #ededed;
  align-items: center;
  padding: 0 23rpx;
  box-sizing: border-box;
}

.cashier-mask-head-img{
  width: 24rpx;
  height: 24rpx;
}

.cashier-mask-head-img image{
  width: 100%;
  height: 100%;
}

.cashier-mask-head-word{
  width: calc(100% - 24rpx);
  text-align: center;
  color: #333;
  font-size: 26rpx;
}

.cashier-mask-content{
  width: 100%;
  padding: 0 36rpx;
  box-sizing: border-box;
}

.cashier-mask-price{
  width: 100%;
  height: 113rpx;
  color: #000;
  font-size: 48rpx;
  text-align: center;
  line-height: 113rpx;
}

.cashier-head{
  width: 100%;
  height: 89rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.cashier-head image{
  width: 19rpx;
  height: 33rpx;
}

.cashier-word{
  width: calc(100% - 19rpx);
  color: #333;
  font-size: 32rpx;
  text-align: center;
}