.progress-wrapper{
  width: 100%;
  background-color: #fff;
  padding: 30rpx 30rpx 0;
  box-sizing: border-box;
}

.wraper{
  padding: 20rpx 10rpx 0;
  box-sizing: border-box;
}

/*物流信息*/
.kuaidiInfo{
  background: #fff;
  width: 100%;
  height:220rpx;
  margin-top: 30rpx;
}

.kuaidiInfo .kuaidiIcon{
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin: 50rpx;
}

.kuaidiInfo .kuaidiIcon image{
  width: 100%;
  height: 100%;
}

.kuaidiInfo .kuaidiDetails{
  float: left;
  margin-top: 33rpx;
}

.kuaidiInfo .kuaidiDetails .company{
  line-height: 70rpx;

}

.kuaidiInfo .kuaidiDetails .satus{
  color: #f23b4d;

}

.xbq-bar{
  width: 100%;
  height: 20rpx;
  background: #f3f3f3;
}

.kuaidi_follow{
  width: 100%;
  background: #fff;
}

.kuaidi_follow .follow_satus{
  border-left: 1rpx solid #999;
}

.kuaidi_follow .follow_satus .follow_address{
  margin: 0 20rpx;
  padding-bottom: 25rpx;
  position: relative;
}

.kuaidi_follow .follow_satus .follow_address .address{
  line-height: 40rpx;
  color: #333;
  font-size: 26rpx;
}

.kuaidi_follow .follow_satus .follow_address .address text{
  color: #fe6601;
  margin-left: 10rpx;
}

.kuaidi_follow .follow_satus .follow_address .date{
  color: #666;
  font-size: 22rpx;
}

.kuaidi_follow .follow_satus .follow_address .label{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  position: absolute;
  left: -25rpx;
  top: 15rpx;
  background: #999;
}

.kuaidi_follow .follow_satus .follow_address .label.default{
  background: #fe6601;
  top: 0;
}

.kuaidi_follow .follow_satus .follow_address .default{
  color: #f23b4d;
}

.progress-service{
  width: 100%;
  height: 99rpx;
  border-top: 1px solid #ddd;
  color: #333;
  font-size: 24rpx;
  position: fixed;
  bottom: 0;
}

.progress-service image{
  width: 37rpx;
  height: 31rpx;
}

.progress-mask-bg{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .3);
  z-index: 999;
}

.progress-mask{
  width: 582rpx;
  height: 1124rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -291rpx;
  margin-top: -562rpx;
  z-index: 1000;
}

.progress-mask-head{
  width: 100%;
  height: 152rpx;
  background: linear-gradient(#fe9701, #fe6801);
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.progress-mask-head-title{
  font-size: 32rpx;
}

.progress-mask-head-number{
  font-size: 26rpx;
  margin-top: 18rpx;
}

.progress-mask-content{
  width: 100%;
  height: calc(100% - 152rpx);
  overflow-y: auto;
  -webkit-overflow-scrolling : touch;
}

.progress-mask-item{
  width: 100%;
  /* height: 150rpx; */
  border-bottom: 1px solid #ddd;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.progress-mask-item-time{
  color: #666;
  font-size: 22rpx;
  margin-bottom: 17rpx;
}

.progress-mask-item-word{
  color: #333;
  font-size: 26rpx;
}