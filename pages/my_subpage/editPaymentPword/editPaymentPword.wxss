.edit-pay-word-wrapper{
  width: 100%;
}

.edit-pay-word-tab{
  width: 100%;
  height: 100rpx;
  background-color: #ddd;
}

.edit-pay-word-tab-item{
  width: 50%;
  height: 100%;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
}

.edit-pay-word-tab-cur{
  color: #fff;
  background-color: #fe6601;
}

.edit-pay-word-info{
  width: 100%;
  margin-top: 16rpx;
}

.edit-pay-word-phone{
  width: 100%;
  height: 92rpx;
  background-color: #fff;
  color: #333;
  font-size: 24rpx;
  border-bottom: 2rpx solid #ddd;
  line-height: 92rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.edit-pay-word-code{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.edit-pay-word-code-input{
  width: 516rpx;
  height: 100%;
}

.edit-pay-word-code-input input{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
}

.edit-pay-word-send-code{
  width: calc(100% - 516rpx);
  height: 56rpx;
  border-left: 1px solid #ddd;
  text-align: center;
  line-height: 56rpx;
  color: #fe6601;
  font-size: 22rpx;
}

.edit-pay-word-tips{
  width: 100%;
  color: #999;
  font-size: 22rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.edit-pay-word-btn-wrapper{
  width: 100%;
  height: 180rpx;
  position: fixed;
  bottom: 0;
}

.edit-pay-word-btn{
  width: 570rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #fe6601;
  color: #fff;
  font-size: 24rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 0 auto;
}

.setpayment-password{
  width: 100%;
  background-color: #fff;
  margin-top: 16rpx;
}

.set-new-password{
  width: 100%;
  height: 92rpx;
  border-bottom: 1px solid #ddd;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.set-new-password input{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
}

.confirm-new-password{
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.confirm-new-password input{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
}