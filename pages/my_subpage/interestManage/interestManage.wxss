.interest-wrapper{
  width: 100%;
  background-color: #fff;
  padding: 60rpx 42rpx 0;
  box-sizing: border-box;
}

.interest-item{
  width: 199rpx;
  height: 72rpx;
  border: 1px solid #999;
  border-radius: 36rpx;
  color: #666;
  font-size: 30rpx;
  text-align: center;
  line-height: 72rpx;
  margin: 0 30rpx 36rpx 0;
}

.interest-item:nth-child(3n+3){
  margin-right: 0;
}

.interest-item-cur{
  border-color: #fe6e01;
  background-color: #fe6e01;
  color: #fff;
}

.interest-btn-wrapper{
  width: 100%;
  height: 180rpx;
  position: fixed;
  bottom: 0;
}

.interest-btn{
  width: 570rpx;
  height: 90rpx;
  background-color: #fe6601;
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 24rpx;
  margin: 0 auto;
}