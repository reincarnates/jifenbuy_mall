.cancel_container {
  position: fixed;
  width: 100%;
  height: 995rpx;
  background-color: #fff;
  border-top-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
  padding: 28rpx 30rpx 43rpx 30rpx;
  box-sizing: border-box;
  transition: 300ms;
  z-index: 999;
  overflow: hidden;
}

.cancel_container view {
  font-size: 30rpx;
  /* width: 100%; */
}

.cancel_container .reason_cell {
  padding: 18rpx 0;
  border-bottom: 1rpx #dddddd solid;
}

.cancel_container .cancel_explain {
  background: #f5f5f5; 
  margin-top: 24rpx; 
  padding: 10rpx 0; 
  white-space:pre-line; 
  font-size:26rpx;
  color: #999;
}


.cancel_bottom_view {
  position: absolute;
  bottom: 45rpx;
  left: 90rpx;
  right: 90rpx;
  border-radius: 33rpx;
  overflow: hidden;
}

.cancel_button, .sure_button {
  width: 50%;
  height: 100%;
  background-color: #fe9901;
  color: #fff;
  text-align: center;
  line-height: 66rpx;
  font-size: 24rpx;
}

.sure_button {
  background-color: #fe6601;
}