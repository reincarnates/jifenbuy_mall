
.container {
  padding-bottom: 140rpx;
}

.evaluate-view {
  margin-top: 2rpx;
  padding: 30rpx 30rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.evaluate-view textarea {
  height: 215rpx;
  background: #f5f5f5;
  margin-top: 30rpx;
  font-size: 24rpx;
  padding: 24rpx 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.evaluate-view .pic-container {
  display: flex;
  justify-content: space-between;
  margin: 50rpx 0 20rpx 0;
}

.evaluate-view .pic-container .pics-view {
  position: relative;
}

.evaluate-view .pic-container .pics-view .close-button {
  position: absolute;
  right: -24rpx;
  top: -24rpx;
}

.logistics-star-view-container {
  margin-top: 10rpx;
  background: #fff;
  padding: 50rpx 30rpx 20rpx 30rpx;
}

.logistics-star-view-container text {
   font-size: 26rpx;
   color: #666;
}

.bottom-wrapper {
  width: 100%;
  height: 108rpx;
  position: fixed;
  bottom: 0;
}

.bottom-button {
  width: 534rpx;
  height: 66rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 66rpx;
  background-color: #fe6601;
  border-radius: 33rpx;
  margin: 0 auto;
}
