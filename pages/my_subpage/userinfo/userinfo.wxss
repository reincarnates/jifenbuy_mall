
.header-view {
  background: #fff;
  padding: 80rpx 0;
  width: 100%;
  box-sizing: border-box;
  margin-top: 1rpx;
}

.header-view image {
  background: #ddd; 
  width:160rpx; 
  height:160rpx; 
  border-radius: 50%;
}

.header-view view {
  font-size: 26rpx;
  margin-top: 30rpx;
  color: #999;
}

.info-list {
  background: #fff;
  font-size: 26rpx;
  margin-top: 18rpx;
}

.info-list .info-list-cell {
  padding: 0rpx 30rpx 0 30rpx;
   
}

.info-list .info-list-cell .title {
  width:110rpx; 
  color:#333;
  text-align: justify;
  padding-top: 30rpx;
}

.info-list .info-list-cell .title::after {
  content:'';
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 1rpx;
}

.bottom-wrapper {
  width: 100%;
  height: 108rpx;
  position: fixed;
  bottom: 0;
}

.bottom-button {
  width: 534rpx;
  height: 66rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 66rpx;
  background-color: #fe6601;
  border-radius: 33rpx;
  margin: 0 auto;
}
