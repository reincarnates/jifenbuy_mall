 @import "/pages/my_subpage/cancelReason/cancelReason.wxss";
 
.orderDetail_view {
  margin-bottom: 144rpx;
}

.orderDetail_view .orderState_view {
  /* width: 100%; */
  /* height: 200rpx; */
  background:linear-gradient(0deg, #ef6601 20%, #ef8901);
  color: white;
  font-size: 26rpx;
  padding: 40rpx 42rpx 70rpx 42rpx;
}
 
.orderDetail_view .orderState_view .orderState_view_left image {
  height: 37rpx;
  width: 37rpx;
  margin-right: 6rpx;
}

.orderDetail_view .orderState_view .orderState_view_left text {
  font-size:22rpx;
  margin-top:12rpx;
}

/* .orderDetail_view .orderState_view .orderState_view_right {
  margin-right: 50rpx;
} */

.orderDetail_view .orderState_view .orderState_view_right image {
  height: 70rpx;
  width: 70rpx;
  margin-bottom: 16rpx;
}

.orderDetail_view .address_view {
  background: #fff;
  margin: -40rpx 30rpx 18rpx 30rpx;
  border-radius: 20rpx;
  /* height: 150rpx; */
  padding: 24rpx 30rpx 36rpx 30rpx;
}

.orderDetail_view .address_view image {
  width: 29rpx;
  height: 38rpx;  
}

.orderDetail_view .address_view text {
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 18rpx;
}

.orderDetail_view .address_view .address {
  font-size: 24rpx;
  color: #000;
  margin-top: 18rpx;
}

.orderDetail_view .commodity_view {
  background: #fff;
  padding: 0rpx 31rpx;
}

.orderDetail_view .commodity_view .commodity_title {
  padding: 15rpx 0rpx;
}

.orderDetail_view .commodity_view .commodity_title text {
  font-size:22rpx;
  color:#333;
  margin:0rpx 12rpx;

}

.commodity_item_center_view {
  justify-content: space-between;
  margin: 0 25rpx;
}

/* 订单信息 */
.orders_info_view {
  background: #fff;
  margin: 18rpx 0;
}

.orders_info_view {
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #333;
}

.orders_info_view text {
  color: #555;
}

.orders_info_view .orders_info_double_cell {
  padding: 24rpx 0;
  border-bottom: 1rpx #ddd solid;
}

.orders_info_view .orders_info_single_cell {
  padding: 24rpx 0;
}

.confirm-goods-bottom {
  width: 100%;
  padding: 25rpx 30rpx 0 30rpx;
  background: #fff;
  box-sizing: border-box;
}

.confirm-goods-price-wrapper{
  width: 100%;
  height: 98rpx;
  border-bottom: 1px solid #ddd;
}

.confirm-goods-price-word,
.confirm-goods-price-num{
  color: #333;
  font-size: 24rpx;
}

.confirm-goods-price-num{
  font-weight: 600;
}

.confirm-goods-price-bottom{
  width: 100%;
  margin-top: 12rpx;
}

.confirm-goods-payment{
  width: 100%;
  height: 76rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
}

.contact-service{
  width: 100%;
  height: 81rpx;
  color: #333;
  font-size: 24rpx
}

.contact-service image{
  width: 37rpx;
  height: 31rpx;
  margin-right: 18rpx;
}

 
.bottom_view {
  height: 126rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  align-items: center;
  justify-content: flex-end;
 } 

 .bottom_view view {
  height: 66rpx;
  width: 200rpx;
  border-radius: 33rpx;
  background-color: #fff;
  font-size: 28rpx;
  border: 1rpx solid #999;
  color: #999;
}

.bottom_view view:last-child {
  margin: 0 18rpx;
  color:#fff; 
  background:linear-gradient(270deg,rgba(254,102,1,1) 0%,rgba(254,153,1,1) 100%);
  border: 0rpx solid #ef6601;
}

.cancel_view {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .1);
  z-index: 30;
  overflow: hidden;
}

