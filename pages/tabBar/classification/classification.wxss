.msg-num{
  position: absolute;
  left: 0;
  top: 0;
  min-width: 26rpx;
  width: auto;
  height: 27rpx;
  background-color: #fe9901;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 27rpx;
  border-radius: 50%;
  padding: 3rpx;
  letter-spacing: -1rpx;
}

.cification-onemenu-wrapper{
  width: 100%;
  height: calc(100% - 92rpx);
}

.cification-onemenu-left{
  width: 153rpx;
  height: 100%;
  background-color: #fff;
  margin-right: 12rpx;
}

.cification-onemenu-left-item{
  width: 100%;
  height: 86rpx;
  text-align: center;
  line-height: 86rpx;
  color: #666;
  font-size: 24rpx;
  border-left: 10rpx solid #fff;
  box-sizing: border-box;
}

.cur{
  border-color: #fe6601;
  color: #fe6601;
  background-color: #f5f5f5;
}

.cification-onemenu-right{
  width: 594rpx;
  padding-right: 12rpx;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling : touch;
}

.cification-onemenu-right-item{
  width: 100%;
  background-color: #fff;
  margin-top: 18rpx;
}

.cification-onemenu-right-item-title{
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
  padding: 14rpx 0 30rpx 12rpx;
  box-sizing: border-box;
}

.cification-onemenu-right-item-content{
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.cification-onemenu-right-item-content-goods{
  width: 33%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.item-goods-img{
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-goods-img image{
  width: 70%;
  height: 70%;
}

.item-goods-word{
  line-height: 69rpx;
