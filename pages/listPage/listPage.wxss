@import "../../lib/iconfont/stylesheet.wxss";

.list-wrapper{
  width: 100%;
  /* height: 100%; */
  background-color: #f5f5f5;
}

.list-head{
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #ddd;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.list-head-input{
  width: 573rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
}

.list-head-input input{
  width: calc(100% - 34rpx);
  height: 60rpx;
  color: #999;
  font-size: 22rpx;
  padding-left: 26rpx;
}

.list-head-input image{
  width: 34rpx;
  height: 35rpx;
}

.list-operation{
  width: 100%;
  height: 77rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.list-operation-item{
  color: #000;
  font-size: 26rpx;
}

.listCur{
  color: #fe6601;
}

.list-goods-wrapper{
  width: 100%;
  height: 100%;
  padding: 0 18rpx;
  box-sizing: border-box;
}

.list-goods{
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.list-goods-item{
  width: 100%;
  height: 277rpx;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
}

.list-goods-item:last-child{
  border-bottom: none;
}

.list-goods-item-img{
  width: 240rpx;
  height: 240rpx;
  border-radius: 10rpx;
}

.list-goods-item-img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.list-goods-item-info{
  width: calc(100% - 240rpx);
  height: 240rpx;
  padding-left: 12rpx;
  box-sizing: border-box;
}

.list-goods-item-info-word{
  line-height: 36rpx;
  color: #111;
  font-size: 24rpx;
  margin-top: 12rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list-special{
  width: 104rpx;
  height: 28rpx;
  border-radius: 14rpx;
  background-color: #ff4040;
  text-align: center;
  line-height: 28rpx;
  color: #fff;
  font-size: 20rpx;
  margin-top: 45rpx;
}

.list-price{
  width: 100%;
  margin-top: 18rpx;
  line-height: 23rpx;
}

.list-new-price{
  font-size: 22rpx;
  color: #fe6601;
}

.list-old-price{
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 5rpx;
}

.list-shop-wrapper{
  width: 100%;
  margin-top: 12rpx;
  color: #999;
  font-size: 20rpx;
}

.list-waterfall-goods-wrapper{
  width: 100%;
  flex-wrap: wrap;
}

.list-waterfall-goods-item{
  width: 349rpx;
  height: 564rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
}

.list-waterfall-goods-item:nth-child(2n+2){
  margin-right: 0;
}

.list-waterfall-goods-item-img{
  width: 100%;
  height: 348rpx;
  background-color: #cb2121;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.list-waterfall-goods-item-img image{
  width: 100%;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.list-waterfall-goods-item-content{
  width: 100%;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.list-waterfall-goods-item-name{
  line-height: 57rpx;
  color: #111;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fixed{
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #f5f5f5;
}

.goTop{
  position: fixed;
  right: 30rpx;
  bottom: 80rpx;
}

.goTop image{
  width: 60rpx;
  height: 60rpx;
}