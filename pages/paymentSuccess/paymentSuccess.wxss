@import '../tabBar/index/index.wxss';

.payment-wrapper{
  width: 100%;
  height: 408rpx;
  background: linear-gradient(#fe9701, #fe6701);
  position: fixed;
  top: 0;
  z-index: 999;
}

.payment-return{
  width: 100%;
  height: 50rpx;
  margin-top: 28rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.payment-return-img{
  width: 19rpx;
  height: 33rpx;
}

.payment-return-img image{
  width: 100%;
  height: 100%;
}

.payment-head{
  width: 100%;
  flex-direction: column;
  /* position: fixed;
  top: 0;
  z-index: 999; */
}

.payment-head-success{
  color: #fff;
  font-size: 32rpx;
}

.payment-head-success image{
  width: 61rpx;
  height: 71rpx;
}

.payment-head-price{
  color: #fff;
  font-size: 40rpx;
  margin-top: 36rpx;
  margin-bottom: 46rpx;
}

.check-order{
  width: 235rpx;
  height: 63rpx;
  border: 2px solid #fff;
  border-radius: 32rpx;
  text-align: center;
  line-height: 63rpx;
  color: #fff;
  font-size: 28rpx;
}

.payment-content{
  width: 100%;
  padding: 0 11rpx;
  box-sizing: border-box;
}

.goods-like{
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #666;
  font-size: 28rpx;
}