.screen-wrapper{
  width: 100%;
}

.screen-price-section{
  width: 100%;
  height: 176rpx;
  border-width: 1rpx 0 1rpx 0;
  border-style: solid;
  border-color: #ddd;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.screen-price-section-title{
  width: 100%;
  line-height: 84rpx;
  color: #111;
  font-size: 26rpx;
}

.screen-price-section-input{
  width: 100%;
  height: 60rpx;
  align-items: center;
  justify-content: center;
}

.screen-price-section-input-min,
.screen-price-section-input-max{
  width: 290rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}

.screen-price-section-input-min input,
.screen-price-section-input-max input{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.screen-price-section-input-ver{
  width: 77rpx;
  height: 2rpx;
  background-color: #f5f5f5;
  margin: 0 12rpx;
}

.screen-brand{
  width: 100%;
  /* height: 373rpx; */
  border-bottom: 1rpx solid #ddd;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.screen-brand-title,
.screen-shop-title{
  width: 100%;
  line-height: 84rpx;
  color: #111;
  font-size: 24rpx;
}

.screen-brand-content{
  width: 100%;
  position: relative;
  overflow: hidden;
}

.screen-brand-item-wrapper{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.screen-brand-item,
.screen-shop-item{
  width: 210rpx;
  height: 70rpx;
  background-color: #e5e5e5;
  border-radius: 8rpx;
  text-align: center;
  line-height: 70rpx;
  color: #333;
  font-size: 24rpx;
  margin-right: 30rpx;
  margin-bottom: 24rpx;
}

.screen-brand-item:nth-child(3n+3),
.screen-shop-item:nth-child(3n+3){
  margin-right: 0;
}

.check-all{
  position: absolute;
  bottom: 24rpx;
  right: 0;
  width: 210rpx;
  height: 70rpx;
  border: 2rpx solid #e5e5e5;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 70rpx;
  z-index: 10;
  border-radius: 8rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.screen-shop{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}


.screen-shop-content{
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}