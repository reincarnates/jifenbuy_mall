@import '../activityCenter/activityCenter.wxss';

.trade-wrapper{
  width: 100%;
  padding: 0 18rpx 18rpx;
  box-sizing: border-box;
}

.trade-item{
  width: 100%;
  height: 272rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 18rpx;
  padding: 24rpx 18rpx 0;
  box-sizing: border-box;
}

.trade-item-title{
  color: #000;
  font-size: 28rpx;
}

.trade-item-content{
  width: 100%;
  margin-top: 15rpx;
}

.trade-item-img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.trade-item-img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.trade-item-word{
  width: calc(100% - 180rpx);
  height: 180rpx;
  padding: 18rpx 0 0 18rpx;
  box-sizing: border-box;
  position: relative;
}

.trade-item-word-name{
  color: #333;
  font-size: 26rpx;
  /* line-height:  */
}

.trade-item-num{
  color: #666;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.trade-item-time{
  color: #666;
  font-size: 22rpx;
  position: absolute;
  bottom: 0;
  right: 18rpx;
}