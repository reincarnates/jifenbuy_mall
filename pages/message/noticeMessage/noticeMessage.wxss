@import '../activityCenter/activityCenter.wxss';

.notice-wrapper{
  width: 100%;
  padding: 18rpx;
  box-sizing: border-box;
}

.notice-item{
  width: 100%;
  height: 242rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 18rpx;
  padding: 24rpx 18rpx 0;
  box-sizing: border-box;
  position: relative;
}

.notice-item-title{
  color: #000;
  font-size: 28rpx;
}

.notice-item-info{
  color: #333;
  font-size: 26rpx;
  line-height: 39rpx;
  margin-top: 35rpx;
}

.notice-item-time{
  color: #666;
  font-size: 22rpx;
  position: absolute;
  right: 18rpx;
  bottom: 37rpx;
}