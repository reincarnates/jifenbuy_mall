.message-wrapper{
  width: 100%;
}

.message-item{
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  margin-top: 18rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.message-item-img{
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
}

.message-item-img image{
  width: 100%;
  height: 100%;
}

.message-item-word{
  padding-left: 18rpx;
  box-sizing: border-box;
}

.message-item-word-title{
  color: #333;
  font-size: 28rpx;
}

.message-item-word-cont{
  color: #999;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.message-item-go{
  width: 15rpx;
  height: 27rpx;
}

.message-item-go image{
  width: 100%;
  height: 100%;
}