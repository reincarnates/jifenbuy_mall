@import "../importGood/importGood.wxss";
@import "../brandOem/brandOem.wxss";

.casualSnacks-nav{
  width: 100%;
  height: 49rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
}

.casualSnacks-nav-item{
  line-height: 45rpx;
  color: #333;
  font-size: 24rpx;
  margin-right: 36rpx;
  border-bottom: 2rpx solid #fff;
  display: inline-block;
}

.casualSnacks-nav-item:last-child{
  margin-right: 0;
}

.cactive{
  border-color: #fe6601;
  color: #fe6601;
}

.swiper {
  width: 100%;
  margin-top: 49rpx;
  overflow-x: auto;
}

.public-img{
  width: 100%;
  height: 250rpx;
}

.public-img image{
  width: 100%;
  height: 100%;
}