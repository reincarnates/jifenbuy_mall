@import "../../app.wxss";

.feedback-upload-btn{
  width: 150rpx;
  height: 150rpx;
  border: 2px dashed #ddd;
  box-sizing: border-box;
  margin-right: 30rpx;
}

.feedback-upload-btn image{
  width: 74rpx;
  height: 60rpx;
}

.feedback-upload-btn-wrapper{
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.feedback-upload-image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
  position: relative;
}

.feedback-upload-image:last-child{
  margin-right: 0;
}

.feedback-upload-image image{
  width: 100%;
  height: 100%;
}

.delete-img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .4);
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  text-align: center;
  line-height: 35rpx;
  color: #fff;
  font-size: 38rpx;
}